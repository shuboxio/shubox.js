<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <script src="shubox_config.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/purecss@1.0.0/build/pure-min.css" integrity="sha384-nn4HPE8lTHyVtfCBi5yW9d20FjT8BJwUXyWZT9InLYax14RDjBj46LmSztkmNP9w" crossorigin="anonymous">
  <link rel="stylesheet" href="/side-menu.css">
  <link rel="stylesheet" href="/demos.css">

  <% pages.forEach(page => { %>
    <% if (page.path == currentPage.path) { %>
      <title><%= page.title %></title>
    <% } %>
  <% }) %>
</head>

<body>
  <div id="layout">
    <a href="#menu" id="menuLink" class="menu-link">
      <span></span>
    </a>

    <div id="menu">
      <div class="pure-menu">
        <a class="pure-menu-heading" href="#">Shubox.js</a>
        <ul class="pure-menu-list">
          <% pages.forEach(page => { %>
          <li class="pure-menu-item <%= page.path == currentPage.path ? " pure-menu-selected " : " " %>">
            <a href="<%= page.path %>" class="pure-menu-link">
              <%= page.title %>
            </a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>

    <div id="main">
