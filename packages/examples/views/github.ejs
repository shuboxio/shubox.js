<%- include('layout/head') %>

<div class="header">
  <h1>A GitHub Form-Like Experience</h1>
  <h2>Let's replicate that GitHub comment form!</h2>
</div>

<div class="content">
   <form class="shubox--form">
    <textarea
      tabindex="1"
      placeholder="Leave a comment or drag and drop some images."
      class="shubox--textarea"
      id="shubox--textarea"></textarea>

    <div tabindex="2" id="shubox--click-to-upload" class="shubox--click-to-upload">
      Attach files by dragging &amp; dropping, <strong>selecting them</strong>,
      or pasting from the clipboard.
    </div>
  </form>
</div>

<script src="/main.js" defer></script>

<%- include('layout/tail') %>
